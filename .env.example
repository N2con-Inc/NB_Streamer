# NB_Streamer Configuration Template
# Copy this file to .env and configure for your environment

# ===========================================
# REQUIRED CONFIGURATION
# ===========================================

# Graylog Configuration (REQUIRED)
NB_GRAYLOG_HOST=your-graylog-server.com
NB_TENANT_ID=your-unique-tenant-id

# ===========================================
# OPTIONAL CONFIGURATION
# ===========================================

# Server Configuration
NB_HOST=0.0.0.0
NB_PORT=8000
NB_DEBUG=false

# Graylog Settings
NB_GRAYLOG_PORT=12201
NB_GRAYLOG_PROTOCOL=udp

# Authentication (default: none - no authentication)
NB_AUTH_TYPE=none
# NB_AUTH_TOKEN=your-bearer-token        # For bearer auth
# NB_AUTH_USERNAME=username              # For basic auth
# NB_AUTH_PASSWORD=password              # For basic auth
# NB_AUTH_HEADER_NAME=X-Custom-Auth      # For header auth
# NB_AUTH_HEADER_VALUE=secret-value      # For header auth

# Message Configuration
NB_COMPRESSION_ENABLED=true
NB_MAX_MESSAGE_SIZE=8192

# Logging
NB_LOG_LEVEL=INFO

# ===========================================
# EXAMPLES FOR DIFFERENT ENVIRONMENTS
# ===========================================

# Development Environment Example:
# NB_GRAYLOG_HOST=dev-graylog.yourcompany.com
# NB_TENANT_ID=development_tenant
# NB_LOG_LEVEL=DEBUG

# Production Environment Example:
# NB_GRAYLOG_HOST=graylog.yourcompany.com
# NB_TENANT_ID=production_tenant
# NB_AUTH_TYPE=bearer
# NB_AUTH_TOKEN=your-secure-production-token
# NB_LOG_LEVEL=WARNING

# Testing with Local Graylog:
# NB_GRAYLOG_HOST=192.168.1.100  # Your Graylog server IP
# NB_TENANT_ID=test_tenant
# NB_LOG_LEVEL=DEBUG