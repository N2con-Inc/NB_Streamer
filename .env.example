# NB_Streamer Configuration Example
# Copy this file to .env and customize for your environment

# ===================================================================
# REQUIRED CONFIGURATION
# ===================================================================

# Multi-tenancy: Comma-separated list of allowed tenants
NB_TENANTS=tenant1,tenant2,example-tenant

# Graylog: Connection details for your Graylog server
NB_GRAYLOG_HOST=your-graylog-server.com
NB_GRAYLOG_PORT=12201

# Authentication: Choose your authentication method
NB_AUTH_TYPE=bearer
NB_AUTH_TOKEN=your-secure-bearer-token-here

# ===================================================================
# OPTIONAL CONFIGURATION
# ===================================================================

# Server Configuration
NB_HOST=0.0.0.0
NB_PORT=8080
NB_DEBUG=false
NB_LOG_LEVEL=INFO

# Graylog Advanced Settings
NB_GRAYLOG_PROTOCOL=udp
NB_GRAYLOG_TIMEOUT=10

# Multi-tenancy Advanced
# NB_TENANTS_FILE=/path/to/tenants.txt
NB_EXPOSE_TENANTS=false

# Alternative Authentication Methods
# Basic Authentication
# NB_AUTH_TYPE=basic
# NB_AUTH_USERNAME=your-username
# NB_AUTH_PASSWORD=your-password

# Custom Header Authentication
# NB_AUTH_TYPE=header
# NB_AUTH_HEADER_NAME=X-API-Key
# NB_AUTH_HEADER_VALUE=your-api-key

# No Authentication (development only)
# NB_AUTH_TYPE=none

# Message Configuration
NB_COMPRESSION_ENABLED=true
NB_MAX_MESSAGE_SIZE=8192

# Network Configuration
NB_TRUST_PROXY_HEADERS=true

# ===================================================================
# EXAMPLES FOR DIFFERENT ENVIRONMENTS
# ===================================================================

# Development Environment:
# NB_TENANTS=dev-tenant
# NB_GRAYLOG_HOST=localhost
# NB_AUTH_TYPE=none
# NB_DEBUG=true
# NB_LOG_LEVEL=DEBUG

# Production Environment:
# NB_TENANTS=prod1,prod2,staging
# NB_GRAYLOG_HOST=graylog.production.com
# NB_AUTH_TYPE=bearer
# NB_AUTH_TOKEN=production-secret-token
# NB_LOG_LEVEL=INFO
# NB_TRUST_PROXY_HEADERS=true

# High-Security Environment:
# NB_TENANTS=secure-tenant
# NB_GRAYLOG_HOST=secure-graylog.internal
# NB_AUTH_TYPE=header
# NB_AUTH_HEADER_NAME=X-Internal-Key
# NB_AUTH_HEADER_VALUE=internal-secret-key
# NB_EXPOSE_TENANTS=false
# NB_TRUST_PROXY_HEADERS=false
