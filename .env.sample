# NB_Streamer Configuration
# Copy this file to .env and customize for your environment

# Server Configuration
NB_HOST=0.0.0.0
NB_PORT=8000
NB_DEBUG=true

# Graylog Configuration (placeholders for development)
NB_GRAYLOG_HOST=localhost
NB_GRAYLOG_PORT=12201
NB_GRAYLOG_PROTOCOL=udp

# Tenant/Client Configuration - REQUIRED
# This identifies which tenant/client this instance serves
# All GELF messages will include this as _NB_tenant field
NB_TENANT_ID=development_tenant

# Authentication Configuration
NB_AUTH_TYPE=none
# NB_AUTH_TOKEN=your-bearer-token-here
# NB_AUTH_USERNAME=username
# NB_AUTH_PASSWORD=password
# NB_AUTH_HEADER_NAME=X-Custom-Auth
# NB_AUTH_HEADER_VALUE=custom-value

# Message Configuration
NB_COMPRESSION_ENABLED=true
NB_MAX_MESSAGE_SIZE=8192

# Logging Configuration
NB_LOG_LEVEL=INFO
