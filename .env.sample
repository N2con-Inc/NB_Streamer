# NB_Streamer Configuration
# Copy this file to .env and customize for your environment

# Server Configuration
PORT=8080

# Authentication Settings
# Options: none, bearer, basic, custom
AUTH_TYPE=none

# Authentication Secret (required if AUTH_TYPE is not 'none')
# For bearer: the token value
# For basic: username:password (will be base64 encoded)
# For custom: the expected header value
AUTH_SECRET=your-secret-token-here

# Custom Header Name (required if AUTH_TYPE is 'custom')
AUTH_CUSTOM_HEADER=X-Custom-Auth

# Graylog Configuration
GRAYLOG_HOST=localhost
GRAYLOG_PORT=12201
GRAYLOG_PROTOCOL=udp

# GELF Message Settings
DEFAULT_HOST=nb-streamer

# Development Settings (for local development only)
PYTHONPATH=/app
JUPYTER_ENABLE_LAB=yes

# Graylog Development Instance Settings (for docker-compose)
GRAYLOG_PASSWORD_SECRET=somepasswordpepper-change-this-in-production
GRAYLOG_ROOT_PASSWORD_SHA2=8c6976e5b5410415bde908bd4dee15dfb167a9c873fc4bb8a81f6f2ab448a918
